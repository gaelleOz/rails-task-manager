<h1>Voici la liste des tâches à faire:</h1>
<ol>

    <% @tasks.each do |task| %>
        <li class= "m-3 p-1 h3">
        <%= link_to task.title, task_path(task) %>
        <% if task.completed == true%>
        <p><i class="fa-regular fa-circle-check"></i>Completed!</p>
         <% else%>
        <p><i class="fa-regular fa-clock"></i>Not completed!</p>
        <%end%>
       <%= link_to "Modifier la tâche", edit_task_path(task), class:"btn btn-primary ms-4"  %>
        <%= link_to 'Supprimer cette tâche', task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"pe-2 btn btn-primary" %>


        </li>

    <% end %>
   <i class="fa-solid fa-square-plus"></i> <%= link_to 'Ajouter une tâche', new_task_path, class:"pe-2 btn btn-primary" %>
</ol>
